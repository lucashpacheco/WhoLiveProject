@model IEnumerable<WhoLivesApp.Models.Apartament>

@{
    ViewBag.Title = "Lista de Apartamentos";
}

<h2>Lista de Apartamentos</h2>

<p>
    @Html.ActionLink(" + Adicionar novo apartamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AP_NUMERO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AP_ATENCAO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AP_NUMERO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AP_ATENCAO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AP_ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AP_ID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.AP_ID })
        </td>
    </tr>
}

</table>
